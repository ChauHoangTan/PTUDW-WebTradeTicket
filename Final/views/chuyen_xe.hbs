
  <!-- Font awesome-->
    <link rel="stylesheet" type="text/css" href="icon/css/fontawesome-all.css">

    <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" 
    integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="https://cdn.leanhduc.pro.vn/font-awesome/pro-5.15.3/css/all.css" />

    <main>
        
    <div class="border-seperate"></div>
        <!-- Session1 -->
        <div class="container-fluid"  id = "session1">
            
            <div class="row justify-content-center align-items-center g-2">
                <div class="col-sm-4 column1" >
                    <div class = "hinhAnh">
                        Hình ảnh
                    </div>
                    
                    <img src = "{{imgChuyenXe1}}" alt="Ảnh chuyến xe">
                    
                    
    
                </div>
                <div class="col-sm-8 column2">
                    <div class="row g-2">

                        {{#with general1}}
                        
                            <div class="col column2-1">
                                <div>
                                    <span class = "field">Nhà xe: </span>

                                    <span>{{Nha_Xe}}</span>

                                
                                </div>

                                <div class = "fixMargin">
                                    <span class = "field">Đi từ: </span>
                                    
                                    <span>{{Diem_Di}}, {{Thoi_Gian_Bat_Dau}}h00 {{Ngay_Di}}</span>
                                </div>

                                <div class = "fixMargin">
                                    <span class = "field">Đến: </span>
                                    
                                    <span>{{Diem_Den}}, {{Thoi_Gian_Den_Noi}}h00 {{Ngay_Den}} </span>
                                </div>

                                <div class = "fixMargin">
                                    <span class = "field">Tổng thời gian hành trình :</span>

                                    <span>{{Tong_Thoi_Gian_Hanh_Trinh}} tiếng</span>
                                </div>
                            </div>

                        {{/with}}
                        
                        {{#with general2}}
                            <div class="col column2-2">
                                <div class="float-end text-danger border border-danger border-2 rounded-pill p-1 bg-light" id = "numberOfEmptySeats">Chỉ còn {{So_Luong_Ghe_Trong}} ghế trống</div>
                                
                                <div class = "clear">
                                    <span class = "field">Giá vé : </span>

                                    <span>Chỉ {{Gia_Ve}}.000đ / vé</span>
                                </div>

                                <div class = "fixMargin">
                                    <span class = "field">Liên hệ : </span>
                                    
                                    <span>{{Lien_He}}</span>
                                </div>

                                <div class = "fixMargin">
                                    <span class = "field">Số lượng ghế : </span>
                                    
                                    <span>{{So_Luong_Ghe}} ghế</span>
                                </div>

                                <div class = "fixMargin">
                                    <span class = "field">Loại xe : </span>
                                    
                                    <span>{{Loai_Xe}}</span>

                                    <a href="/nhaxe/{{idNhaXe}}" class="d-inline-block ms-5 text-success fst-italic">Đi đến nhà xe {{Nha_Xe}}</a>
                                </div>

                            

                                
                            </div>
                        {{/with}}

                        
                    </div>
                </div>
            </div>
           

            

        </div>

        <!-- Tạo border ngăn cách 2 session -->
        <br>
        <div class="border-seperate"></div>


        <div id = "session2">

            <!-- Nav tabs -->
            <ul class="nav nav-tabs justify-content-around" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="image-tab" data-bs-toggle="tab" data-bs-target="#image" type="button" role="tab" aria-controls="home" aria-selected="true">Hình ảnh</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="profile" aria-selected="false">Mô tả</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="route-tab" data-bs-toggle="tab" data-bs-target="#route" type="button" role="tab" aria-controls="messages" aria-selected="false">Lộ trình</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="service-tab" data-bs-toggle="tab" data-bs-target="#service" type="button" role="tab" aria-controls="messages" aria-selected="false">Dịch vụ</button>
                </li>
                
               
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">

                <!-- tab hình ảnh -->
                <div class="tab-pane active" id="image" role="tabpanel" aria-labelledby="Imagetab">

                    <session id = "image-tab-1">
            
                        <div class = "container justify-content-center">
                            <div id="slideImage" class="carousel slide d-block" data-bs-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-bs-target="#slideImage" data-bs-slide-to="0" class="active" aria-current="true" aria-label="First slide"></li>
                                    <li data-bs-target="#slideImage" data-bs-slide-to="1" aria-label="Second slide"></li>
                                    <li data-bs-target="#slideImage" data-bs-slide-to="2" aria-label="Third slide"></li>
                                    <li data-bs-target="#slideImage" data-bs-slide-to="3" aria-label="Four slide"></li>
                                    <li data-bs-target="#slideImage" data-bs-slide-to="4" aria-label="Five slide"></li>
                                </ol>
                                <div class="carousel-inner" role="listbox">
                                    
                                  
                                    <div class="carousel-item active">
                                        <img src="{{imgChuyenXe1}}" class="w-100 d-block" alt="First slide">
                                    </div>
                                    <div class="carousel-item"> 
                                        <img src="{{imgChuyenXe2}}" class="w-100 d-block" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="{{imgChuyenXe3}}" class="w-100 d-block" alt="Third slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="{{imgChuyenXe4}}" class="w-100 d-block" alt="Four slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="{{imgChuyenXe5}}" class="w-100 d-block" alt="Five slide">
                                   
                                    </div>
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#slideImage" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#slideImage" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>

                        </div>
                        
            
                    </session>
            
            
                    <session id = "image-tab-2">
                        <div class = "container-fluid">
                            {{#each getImage}}

                                <img class = "d-inline" src = "{{imgPath}}" alt = "Ảnh chuyến xe số 1">
                            
                            {{/each}}
                            
                        </div>
                    </session>
                </div>

                <!-- tab mô tả -->
                <div class="tab-pane" id="description" role="tabpanel" aria-labelledby="description-tab">
                    {{{getNhaXe.Mo_ta}}}
                
                    
                </div>

                <!-- tab lộ trình -->
                <div class="tab-pane" id="route" role="tabpanel" aria-labelledby="route-tab">
                    {{{getNhaXe.Lo_Trinh}}}
                    

                </div>

                <!-- tab dịch vụ -->
                <div class="tab-pane" id="service" role="tabpanel" aria-labelledby="service-tab">
                    {{{getNhaXe.Dich_Vu}}}
                </div>

                        

            </div>
        
        </div>   

        <div class = "border-seperate"></div>
            
            <div class = "container-fluid footer">  
                <br>
                <div class = "clearfix">
                    <a class="text-decoration-none btn btn-success float-end my-3 mx-5 px-3 py-2" href="/chuyenxe/{{detailsChuyenXe.id}}/datve/{{detailsChuyenXe.id}}">Đặt vé</a>
                </div>
                

                <div class="clearfix">
                    <div class="float-end text-body text-decoration-underline fst-italic">Giá vé : {{general2.Gia_Ve}}.000đ / 1 vé</div>
                </div>
              

            </div>
        </div>
        

        <!-- Link to css -->
        <link rel="stylesheet" type="text/css" href="/css/trang_chu.css">
        <link rel="stylesheet" type="text/css" href="/css/chuyen_xe.css">
  

        <!-- Bootstrap JavaScript Libraries -->
 
        
    </main>