                        </div>
                        {{!-- sửa nhà xe --}}
                        <div class="row">
                            <div class="col-12" id="content">
                                <div class="card">
                                    <div class="card-header">
                                        <h3>Sửa nhà xe</h3>
                                    </div>
                                    <div class="card-body">
                                        <form method="POST" action="/QL_NhaXe/Update">
                                            {{!-- lựa chọn nhà xe để sửa --}}
                                            <div class="mb-3">
                                                <label for="tenNhaXe" class="form-label

                                                ">Chọn nhà xe</label>
                                                <select class="form-select" aria-label="Default select example" name="nha_xe_id">
                                                    <option selected>Chọn nhà xe cần chỉnh sửa</option>
                                                    {{#each nha_xes}}
                                                    <option value="{{id}}" >{{ten_Nha_Xe}}</option>
                                                    {{/each}}

                                                </select>
                                            </div>
                                            {{!-- sửa nhà xe --}}
                                            <h3>Chỉnh sửa thành</h3>
                                            <div class="mb-3">
                                                <label for="tenNhaXe" class="form-label
                                                ">Tên nhà xe</label>
                                                <input type="text" class="form-control" id="tenNhaXe" name="ten_Nha_Xe">
                                            </div>
                                            <div class="mb-3">
                                                <label for="soXe" class="form-label">Số lượng xe</label>
                                                <input type="text" class="form-control" id="soXe" name="So_Luong_Xe">
                                            </div>

                                            <div class="mb-3">
                                                <label for="soDienThoai" class="form-label
                                                ">Số điện thoại</label>
                                                <input type="text" class="form-control" id="soDienThoai" name="SDT">
                                            </div>

                                            <div class="mb-3">
                                                <label for="soDienThoai" class="form-label
                                                ">Địa Chỉ</label>
                                                <input type="text" class="form-control" id="soDienThoai" name="Dia_Chi">
                                            </div>
                                            <button type="submit" class="btn btn-primary">Sửa</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- danh sách nhà xe -->
                        <div class="row">
                            <div class="col-12" id="content">
                                <div class="card">
                                    <div class="card-header">
                                        <h3>Danh sách nhà xe</h3>
                                    </div>
                                    <div class="card-body">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th scope="col">ID</th>
                                                    <th scope="col">Tên nhà xe</th>
                                                    <th scope="col">Số lượng Xe</th>
                                                    <th scope="col">Số điện thoại</th>
                                                    <th scope="col">Thao tác</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{!-- add data from model nha_xe.js --}}
                                                {{#each nha_xes}}
                                                <tr>
                                                    <th>{{id}}</th>
                                                    <td>{{ten_Nha_Xe}}</td>
                                                    <td>{{So_Luong_Xe}}</td>
                                                    <td>{{SDT}}</td>
                                                    {{!-- button update and delete --}}
                                                    <td>
                                                        <a href="/QL_NhaXe/Remove/{{id}}" class="btn btn-danger">Xóa</a>
                                                    </td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
