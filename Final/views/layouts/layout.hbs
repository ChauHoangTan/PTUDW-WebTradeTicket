                                    <a href="/taikhoan" class="dropdown-item">Thông tin tài khoản</a>
                                    <a href="#" class="dropdown-item">Lịch sử đặt vé</a>
                                    <form action="/logout" method="POST">
                                        <button type="submit" class="dropdown-item">Đăng xuất</button>
                                    </form>
                                </div>
                            </div>
                            {{else}}
                            <a href="/login" class="nav-item nav-link ms-5 linkLogin">Đăng nhập</a>
                            {{/if}}
                    </div>
                </div>
            </nav>
        </div>
        <!-- Navbar End -->
    </div>
    <!-- Header End -->

    {{{ body }}}

    <!-- Footer start-->
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <div class="row">
                        <div class="col-3 d-flex align-items-center">
                            <img class="logo-hcmus" src="/img/logo-hcmus.webp" alt="HCMUS">
                        </div>
                        <div class="col-9 d-flex flex-column justify-content-between">
                            <div class="label-name">
                                <span>WEBSITE BÁN VÉ XE KHÁCH VEXEMAC</span>
                            </div>
