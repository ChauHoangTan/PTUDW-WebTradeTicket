<!doctype html>
<html lang="en">

<head>
    <title>{{ Title }}</title>
    <link rel="icon" type="image/x-icon" href="/img/icon.png">

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
