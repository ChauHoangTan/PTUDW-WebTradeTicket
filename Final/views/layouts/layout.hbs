<body>
    <!-- Header Start -->
    <div class="header">
        <!-- Navbar Start -->
        <div class="container" id="navbar-container">
            <nav class="navbar navbar-expand-md navbar-light" id="navbar">
                <!-- for Bootstrap4: .mr-auto -->
                <div class="navbar-nav me-auto" id="navbar-start">
                    <a href="/" class="navbar-brand">
                        <img class="" src="/img/logo.png" alt="vexemac logo">
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-end" aria-controls="navbar-end" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- for Bootstrap4: .ml-auto -->
                <div class="collapse navbar-collapse justify-content-end" id="navbar-end">
                    <div class="navbar-nav">
                        {{!-- <a href="#" class="nav-item nav-link ms-5">Thông tin</a> --}}
                            {{#if isLoggedin}}
                            <div class="nav-item dropdown ms-5">
                                <!-- for Bootstrap4: data-toggle: "dropdown" -->
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Người dùng</a>
